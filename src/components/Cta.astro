---
interface Props {
  id?: string;
  label?: string;
  class?: string;
}

const {label = 'Jetzt\u00A0buchen', class: className = '', id} = Astro.props;
---

<a
  id={id}
  href="#"
  class:list={[
    'rounded-full px-4 py-2 w-fit mx-auto border-[1px] border-white hover:bg-accent hover:border-accent',
    className,
  ]}>{label}</a
>
