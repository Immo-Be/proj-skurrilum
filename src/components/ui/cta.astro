---
interface Props {
  id?: string;
  label: string;
  class?: string;
}

const {label = '', class: className = '', id} = Astro.props;
---

<a
  id={id}
  href="#"
  class:list={[
    'rounded-full w-fit mx-auto border-[1px] border-white hover:bg-accent hover:border-accent',
    className,
  ]}>{label}</a
>
