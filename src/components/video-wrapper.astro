---
import intro_text from '../assets/overlay-text.png';
import intro_image from '../assets/start_2min2.png';
import intro_video from '../assets/webtrailer.mp4';
import Cta from './Cta.astro';
---

<section class="relative">
  <img
    class="hidden-on-desktop size-full min-h-[200px] object-cover"
    src={intro_image.src}
    alt="Three people discovering the mysteries of an escape room at the Skurrilum"
  />
  <div>
    <video
      autoplay
      muted
      loop
      class="hidden-on-mobile size-full object-cover object-top"
      aria-label="Introductory video showing the escape room experience at Skurrilum"
    >
      <source src={intro_video} type="video/mp4" />
    </video>
  </div>
  <div class="absolute-center flex flex-col">
    <img
      src={intro_text.src}
      alt="Introductory text overlay"
      class="max-h-[200px] object-contain"
    />
    <Cta id="cta-element-video" label="Jetzt\u00A0buchen" class="text-white" />
  </div>
</section>
